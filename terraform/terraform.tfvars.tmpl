# Terraform variables for Azure Developer CLI (azd) integration
# This file is automatically managed by azd - do not edit manually

# Environment configuration (set by azd)
environmentName = "{{ .Env.AZURE_ENV_NAME }}"
location       = "{{ .Env.AZURE_LOCATION }}"

# API Keys (set from azd environment variables)
openai_api_key         = "{{ .Env.OPENAI_API_KEY }}"
azure_openai_endpoint  = "{{ .Env.AZURE_OPENAI_ENDPOINT }}"
azure_openai_api_key   = "{{ .Env.AZURE_OPENAI_API_KEY }}"
anthropic_api_key      = "{{ .Env.ANTHROPIC_API_KEY }}"

# VNC Configuration
vnc_password       = "{{ .Env.VNC_PASSWORD }}"
enable_vnc_browser = {{ .Env.ENABLE_VNC_BROWSER }}

# Container Resources
container_cpu        = {{ .Env.CONTAINER_CPU_CORES }}
container_memory     = {{ .Env.CONTAINER_MEMORY_GB }}
vnc_container_cpu    = {{ .Env.VNC_CONTAINER_CPU_CORES }}
vnc_container_memory = {{ .Env.VNC_CONTAINER_MEMORY_GB }}

# Resource token for unique naming (generated by azd)
resourceToken = "{{ .Env.AZURE_RESOURCE_TOKEN }}"

# Principal ID for role assignments
principalId = "{{ .Env.AZURE_PRINCIPAL_ID }}"
